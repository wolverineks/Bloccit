<h1><%= image_tag( @topic.image.thumb.url ) if @topic.image? %><%= @topic.name %></h1>

<% if policy(@topic).update? %>
  <%= link_to "Edit", edit_topic_path(@topic), class: 'btn btn-success' %>
<% end %>

<% if policy(@topic).destroy? %>
  <%= link_to "Delete", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?' } %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %><br>
    </p>
    
    <%= render @posts %>   
  
    <%= will_paginate @posts %>

    <div class="col-md-4">
      <% if policy(Post.new).create? %>
        <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
      <% end %>
    </div>
  
  </div>
</div>