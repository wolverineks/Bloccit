<%= form_for [topic, post, comment] do |f| %>
  
  <div class="form-group">    
    <%= f.label :new_comment %>
    <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Enter comment body" %>
  </div>

  <div class="form-group">
    <%= f.submit "Add Comment", class: 'btn btn-success' %>
  </div>

<% end %>